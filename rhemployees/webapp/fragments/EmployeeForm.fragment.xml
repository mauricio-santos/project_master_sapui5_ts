<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
>
	<form:SimpleForm id="idInternalSimpleForm" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false">
		<form:content>
			<Label id="idFirstNameInternalLabel" text="{i18n>firstName}"/>
			<Input id="idFirstNameInternalInput" 
				value="{employeeModel>/FirstName}" 
				required="true" 
				liveChange="onValidation"
				valueState="{employeeModel>/FirstNameValueState}"
			/>

			<Label id="idLastNameInternalLabel" text="{i18n>lastName}"/>
			<Input id="idLastNameInternalInput" 
				value="{employeeModel>/LastName}" 
				required="true" 
				liveChange="onValidation"
				valueState="{employeeModel>/LastNameValueState}"
			/>

			<Label id="idDNIInternalLabel" text="{i18n>dni}"
			/>
			<Input id="idDniInternalInput" 
				value="{employeeModel>/DNI}" 
				required="true" 
				placeholder="{i18n>dniFormat}" 
				change="onValidation" 
				visible="{= ${employeeModel>/EmployeeType} === 'Internal' || ${employeeModel>/EmployeeType} === 'Manager'}"
				valueState="{employeeModel>/DNIValueState}"
			/>

			<Label id="idCifLabel" text="{i18n>cif}"/>
			<Input id="idCifInput" 
				value="{employeeModel>/CIF}" 
				required="true"
				placeholder="{i18n>cifFormat}" 
				change="onValidation" 
				visible="{= ${employeeModel>/EmployeeType} === 'Autonomous'}"
				valueState="{employeeModel>/CIFValueState}"
			/>

			<Label id="idGrossAnnualSalaryInternalLabel" text="{i18n>annualSalary}"/>
			<Slider id="idSalaryInternalSlider" class="sapUiMediumMarginBottom customSlider" 
				enableTickmarks="true" 
				min="12000" 
				max="80000" 
				step="500" 
				showAdvancedTooltip="true" 
				value="{employeeModel>/SalaryInternal}"
				visible="{= ${employeeModel>/EmployeeType} === 'Internal'}"
			/>

			<Label id="idDailyPriceLabel" text="{i18n>dailyPrice}"/>
            <Slider id="idDailyPriceSlider" class="sapUiMediumMarginBottom customSlider" 
                enableTickmarks="true" 
                min="100" 
                max="2000" 
                step="100" 
                showAdvancedTooltip="true" 
                value="{employeeModel>/DailyPrice}" 
				visible="{= ${employeeModel>/EmployeeType} === 'Autonomous'}"
            />

			<Label id="idGrossAnnualSalaryManagerLabel" text="{i18n>annualSalary}"/>
			<Slider id="idSalaryManagerSlider" class="sapUiMediumMarginBottom customSlider" 
				enableTickmarks="true" 
				min="50000" 
				max="200000" 
				step="10000" 
				showAdvancedTooltip="true" 
				value="{employeeModel>/SalaryManager}"
				visible="{= ${employeeModel>/EmployeeType} === 'Manager'}"
			/>

			<Label id="idIncorporationDateInternalLabel" text="{i18n>incorporationDate}"/>
			<DatePicker id="idInternalDatePicker" 
				dateValue="{employeeModel>/IncorporationDate}" 
				required="true" 
				change="onValidation"
				valueState="{employeeModel>/IncorporationDateValueState}"
			/>
		</form:content>
	</form:SimpleForm>
</c:FragmentDefinition>